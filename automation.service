[Unit]
Description=Automation FastAPI Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/jacob/automation
ExecStart=/usr/bin/env uv run uvicorn app:app --host 0.0.0.0 --port 8000
Restart=on-failure
Environment=PYTHONUNBUFFERED=1
StandardOutput=append:/home/jacob/automation/uvicorn.log
StandardError=append:/home/jacob/automation/uvicorn.log

[Install]
WantedBy=default.target
